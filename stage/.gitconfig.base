[alias]
    plog = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
[branch]
    autosetuprebase = always
[push]
    default = current
[core]
    editor = $(which nvim)
[merge]
    tool = p4merge
[mergetool]
    prompt = false
[mergetool "p4merge"]
    trustExitCode = true
    path = /Applications/p4merge.app/Contents/MacOS/p4merge
